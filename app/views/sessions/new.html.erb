<div class="bg-login">
 <div class="bg-login-content">
 <h1 class="bg-login-title">Login</h1>
 <%= form_tag sessions_path do |form| %>
   <div class="field bg-login-field">
     <%= label_tag :email %>
     <%= text_field_tag :email, "", class: 'bg-login-input' %>
   </div>
   <div class="field bg-login-field">
     <%= label_tag :password %>
     <%= password_field_tag :password, "", class: 'bg-login-input' %>
   </div>
   <div class="actions">
     <%= submit_tag "Login" %>
   </div>
 <% end %>  
 </div>
</div>